<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>University Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each county.universities}}
      <tr>
        <td>
          {{name}}
        </td>
        <td>
          {{lat}}
        </td>
        <td>
          {{lng}}
        </td>
        <td>
          {{description}}
        </td>
        <td>
            <a href="/county/{{../county._id}}/deleteUniversity/{{_id}}" class="button">
            <span class="icon is-small">
            <i class="fas fa-trash"></i>
            </span>
            </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
